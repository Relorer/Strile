<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/button_timer_control"
    tools:context=".ui.screens.authorization.chooseauthway.ChooseAuthWayFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/text_text_streak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text_text_streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Be more effective\nwith Strile"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginBottom="55dp"
        android:textAppearance="@style/TextPrimary"
        app:layout_constraintBottom_toTopOf="@+id/button_auth_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_auth_email"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="24dp"
        android:layout_marginStart="@dimen/margin_base"
        android:layout_marginEnd="@dimen/margin_base"
        android:textAppearance="@style/TextPrimary"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/button_auth_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal|top"
        />

    <Button
        android:id="@+id/button_auth_google"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_base"
        android:paddingBottom="@dimen/margin_base"
        android:layout_marginStart="@dimen/margin_base"
        android:layout_marginEnd="@dimen/margin_base"
        android:textAppearance="@style/TextPrimary"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="@dimen/margin_base"
        app:layout_constraintBottom_toTopOf="@+id/button_skip_auth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal|top"
        />

    <TextView
        android:id="@+id/button_skip_auth"
        android:text="Skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:textAllCaps="true"
        android:textAppearance="@style/TextSecondary"
        android:textColor="@color/colorGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="@dimen/margin_base"
        android:paddingStart="@dimen/margin_base"
        android:paddingEnd="@dimen/margin_base"/>

</androidx.constraintlayout.widget.ConstraintLayout>