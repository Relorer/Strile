<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_incomplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".fragments.journal.cases.habits.JournalHabitsFragment"
            android:background="@color/colorPrimary"/>

        <include
            android:id="@+id/button_hiding"
            layout="@layout/button_hiding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between_blocks"
            android:visibility="invisible"/>

        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/colorPrimary"
            android:id="@+id/recycler_completed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".fragments.journal.cases.habits.JournalHabitsFragment" />

    </LinearLayout>

</ScrollView>